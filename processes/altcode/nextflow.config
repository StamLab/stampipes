includeConfig "../../nextflow.config"

process {
  withName: STAR_solo {
    module = [ 'samtools/1.14' ]
  }
  withName: convert_to_h5ad {
    container = "file://${baseDir}/scanpy.sif"
  }
}

apptainer {
  enabled = true
  cacheDir = "$HOME/.apptainer_nextflow_cache"
  runOptions = "--bind /net/seq/data2/,/net/seq/data/,${baseDir}"
}
